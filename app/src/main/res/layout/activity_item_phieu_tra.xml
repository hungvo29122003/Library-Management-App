<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    tools:context=".item_phieu_tra">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/white"
        android:elevation="2dp">

        <!-- Mã phiếu trả -->
        <TextView
            android:id="@+id/tv_maPhieuTra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã Phiếu Trả: 1"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Mã phiếu mượn -->
        <TextView
            android:id="@+id/tv_maPhieuMuon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã Phiếu Mượn: 1"
            android:textSize="12sp" />

        <!-- Thủ thư -->
        <TextView
            android:id="@+id/tv_tenThuThu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thủ Thư: Tran Thi B"
            android:textSize="12sp" />

        <!-- Tên độc giả -->
        <TextView
            android:id="@+id/tv_tenDocGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Độc Giả: Le Van C"
            android:textSize="12sp" />

        <!-- Ngày trả -->
        <TextView
            android:id="@+id/tv_ngayTra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày Trả: 09/03/2025"
            android:textSize="12sp" />

        <!-- Tổng tiền -->
        <TextView
            android:id="@+id/tv_tongTien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng Tiền: 0.00"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>